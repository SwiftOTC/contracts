pragma solidity 0.8.20;

contract OTCSmartContract is ReentrancyGuard, Ownable {
    using Address for address;
    using EnumerableSet for EnumerableSet.UintSet;
    struct Order {
        uint256 orderId;
        address seller;
        address buyer;
        address tokenToSell;
        uint256 amountToSell;
        address tokenToBuy;
        uint256 amountToBuy;
        address allowedBuyer;
        uint8 status; // 0 = open, 1 = finalized, 2 = cancelled
    }

    modifier noContractsAllowed() {
        require(
            address(msg.sender).code.length == 0 && tx.origin == msg.sender,
            "No Contracts Allowed!"
        );
        _;
    }

    Order[] public orders;
    address public treasury_address;
    mapping(address => bool) public whitelistedTokens;
    mapping(address => EnumerableSet.UintSet) private _usersOrders;
    mapping(uint8 => EnumerableSet.UintSet) private _ordersByStatus;
    uint256 public feePercentage;

    function setTreasuryAddress(address _treasuryAddress) public onlyOwner {
        treasury_address = _treasuryAddress;
    }

    function whitelistToken(address _token, bool _whitelisted)
        public
        onlyOwner
    {
        whitelistedTokens[_token] = _whitelisted;
    }

    function setFeePercentage(uint256 _feePercentage) public onlyOwner {
        require(_feePercentage <= 200, "Fee cannot be more than 2%");
        feePercentage = _feePercentage;
    }

    constructor(
        address initialOwner,
        address treasuryAddress,
        uint256 initialFeePercentage
    ) Ownable(initialOwner) {
        treasury_address = treasuryAddress;
        feePercentage = initialFeePercentage;
    }

    event OrderMade(
        uint256 indexed orderId,
        address indexed seller,
        address tokenToSell,
        uint256 amountToSell,
        address tokenToBuy,
        uint256 amountToBuy
    );
    event OfferAccepted(uint256 indexed orderId, address indexed buyer);
    event OrderCanceled(uint256 indexed orderId, address indexed seller);

    function createOrder(
        address _tokenToSell,
        uint256 _amountToSell,
        address _tokenToBuy,
        uint256 _amountToBuy,
        address _allowedBuyer
    ) public nonReentrant noContractsAllowed {
        require(
            (_amountToBuy > 0 && _amountToSell > 0),
            "Amount musts be greater than 0"
        );
        require(
            _tokenToSell != _tokenToBuy,
            "Token to sell and token to buy cannot be the same"
        );
        require(
            _tokenToSell != address(0) && _tokenToBuy != address(0),
            "Invalid token address"
        );

        IERC20(_tokenToSell).transferFrom(
            msg.sender,
            address(this),
            _amountToSell
        );

        uint256 orderId = orders.length;
        _usersOrders[msg.sender].add(orderId);
        _ordersByStatus[0].add(orderId);
        orders.push(
            Order({
                orderId: orderId,
                seller: msg.sender,
                buyer: address(0),
                tokenToSell: _tokenToSell,
                amountToSell: _amountToSell,
                tokenToBuy: _tokenToBuy,
                amountToBuy: _amountToBuy,
                allowedBuyer: _allowedBuyer,
                status: 0
            })
        );

        emit OrderMade(
            orderId,
            msg.sender,
            _tokenToSell,
            _amountToSell,
            _tokenToBuy,
            _amountToBuy
        );
    }

    function acceptOrder(uint256 _orderId)
        public
        nonReentrant
        noContractsAllowed
    {
        Order storage order = orders[_orderId];
        require(order.status == 0, "Order not open");
        require(
            order.allowedBuyer == address(0) ||
                order.allowedBuyer == msg.sender,
            "Not allowed to accept this order"
        );

        bool isWhitelisted = whitelistedTokens[order.tokenToSell];
        uint256 feeAmount = 0;
        uint256 transferAmountToSeller = order.amountToBuy;

        if (!isWhitelisted) {
            feeAmount = (order.amountToBuy * feePercentage) / 10000;
            transferAmountToSeller -= feeAmount;
        }

        if (feeAmount > 0) {
            IERC20(order.tokenToBuy).transferFrom(
                msg.sender,
                treasury_address,
                feeAmount
            );
        }

        order.buyer = msg.sender;
        order.status = 1; // Finalized
        _usersOrders[order.seller].remove(_orderId);
        _ordersByStatus[0].remove(_orderId);
        _ordersByStatus[1].add(_orderId);

        IERC20(order.tokenToBuy).transferFrom(
            msg.sender,
            order.seller,
            transferAmountToSeller
        );

        IERC20(order.tokenToSell).transfer(msg.sender, order.amountToSell);

        emit OfferAccepted(_orderId, msg.sender);
    }

    function bulkBuyOrders(uint256[] memory orderIds)
        public
        nonReentrant
        noContractsAllowed
    {
        require(orderIds.length < orders.length, "Invalid orderIds");
        for (uint256 i = 0; i < orderIds.length; i++) {
            require(
                (orderIds[i] < orders.length) && (orderIds[i] >= 0),
                "Invalid orderIds"
            );
            uint256 orderId = orderIds[i];
            Order storage order = orders[orderId];

            require(order.status == 0, "Order not open");
            require(
                order.allowedBuyer == address(0) ||
                    order.allowedBuyer == msg.sender,
                "Not allowed to accept this order"
            );

            bool isWhitelisted = whitelistedTokens[order.tokenToSell];
            uint256 feeAmount = 0;
            uint256 transferAmountToSeller = order.amountToBuy;

            if (!isWhitelisted) {
                feeAmount = (order.amountToBuy * feePercentage) / 10000;
                transferAmountToSeller -= feeAmount;
            }

            if (feeAmount > 0) {
                IERC20(order.tokenToBuy).transferFrom(
                    msg.sender,
                    treasury_address,
                    feeAmount
                );
            }

            order.buyer = msg.sender;
            order.status = 1; // Finalized
            _usersOrders[order.seller].remove(orderId);
            _ordersByStatus[0].remove(orderId); 
            _ordersByStatus[1].add(orderId);

            IERC20(order.tokenToBuy).transferFrom(
                msg.sender,
                order.seller,
                transferAmountToSeller
            );

            IERC20(order.tokenToSell).transfer(msg.sender, order.amountToSell);

            emit OfferAccepted(orderId, msg.sender);
        }
    }

    function cancelOrder(uint256 _orderId)
        public
        nonReentrant
        noContractsAllowed
    {
        require(_orderId < orders.length, "Order does not exist");
        Order storage order = orders[_orderId];

        require(order.seller == msg.sender, "Only seller can cancel");
        require(order.status == 0, "Order already accepted or finalized");

        order.status = 2; // Status 2 for canceled orders
        _usersOrders[order.seller].remove(_orderId);
        _ordersByStatus[0].remove(_orderId);
        _ordersByStatus[2].add(_orderId);

        IERC20(order.tokenToSell).transfer(order.seller, order.amountToSell);

        emit OrderCanceled(_orderId, msg.sender);
    }

    function orderCount() public view returns (uint256) {
        return orders.length;
    }

    function getOrder(uint256 _orderId) public view returns (Order memory) {
        require(_orderId < orders.length, "Order does not exist");
        return orders[_orderId];
    }

    function getUserOrdersByStatus(address user, uint8 status)
        public
        view
        returns (uint256[] memory)
    {
        EnumerableSet.UintSet storage userOrderIds = _usersOrders[user];
        uint256[] memory tempOrderIds = new uint256[](userOrderIds.length());
        uint256 count = 0;

        for (uint256 i = 0; i < userOrderIds.length(); i++) {
            uint256 orderId = userOrderIds.at(i);
            if (orders[orderId].status == status) {
                tempOrderIds[count] = orderId;
                count++;
            }
        }

        uint256[] memory filteredOrderIds = new uint256[](count);
        for (uint256 i = 0; i < count; i++) {
            filteredOrderIds[i] = tempOrderIds[i];
        }

        return filteredOrderIds;
    }

    function getOrdersByStatus(uint8 status)
        public
        view
        returns (uint256[] memory)
    {
        EnumerableSet.UintSet storage orderSet = _ordersByStatus[status];
        uint256[] memory orderIds = new uint256[](orderSet.length());

        for (uint256 i = 0; i < orderSet.length(); i++) {
            orderIds[i] = orderSet.at(i);
        }

        return orderIds;
    }
}
